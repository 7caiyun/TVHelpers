    <Page.Resources>

        <DataTemplate x:Name="HeroImageDataTemplate">
            <Grid>
                <Image Source="{Binding FeaturedImage, Mode=OneWay}" Stretch="UniformToFill" Opacity=".3" />
                <StackPanel>
                    <TextBlock Text="{Binding FeaturedHero.Title}" />
                    <TextBlock Text="{Binding FeaturedHero.Description}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Hub Orientation="Vertical">

            <Hub.Header>
                <Grid Height="48" Background="{ThemeResource ThemeHubHeaderBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/HeaderLogo.png" Height="40" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MainHeaderTitle" x:Uid="SimplyEntertaining" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center" />
                </Grid>
            </Hub.Header>

            <!-- Featured Hero -->
            <HubSection Height="{Binding ViewModel.DeviceWindowHeight, Mode=OneWay}">
                <DataTemplate x:DataType="viewmodels:MainViewModel">
                    <Grid DataContext="{Binding ViewModel.FeaturedHero}" Margin="0">
                        <ContentPresenter ContentTemplate="{StaticResource HeroImageDataTemplate}" />
                        <ListView ItemsSource="{Binding ViewModel.QueueViewModel.QueuePreview}" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
                    </Grid>
                </DataTemplate>
            </HubSection>


            <!-- Movie Hero -->
            <HubSection Height="{Binding ViewModel.DeviceWindowHeight, Mode=OneWay}" Margin="0">
                <DataTemplate>
                    <Grid DataContext="{Binding ViewModel.MovieHero}">
                        <ContentPresenter ContentTemplate="{StaticResource HeroImageDataTemplate}" />
                    </Grid>
                </DataTemplate>
            </HubSection>


            <!-- TV Hero -->
            <HubSection Height="{Binding ViewModel.DeviceWindowHeight, Mode=OneWay}" Margin="0">
                <DataTemplate>
                    <Grid DataContext="{Binding ViewModel.TvHero}">
                        <ContentPresenter ContentTemplate="{StaticResource HeroImageDataTemplate}" />
                    </Grid>
