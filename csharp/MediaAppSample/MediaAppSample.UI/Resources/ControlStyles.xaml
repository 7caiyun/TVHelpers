    <Style TargetType="controls:ImageControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ImageControl">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="ImageLoaded">
                                    <!--<VisualState.Setters>
                                        <Setter Target="progressRing.IsActive" Value="False" />
                                    </VisualState.Setters>-->
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="Image" Storyboard.TargetProperty="Opacity" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="ImageFailed" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Image x:Name="Image" Opacity="0" Stretch="UniformToFill" HorizontalAlignment="Center">
                                <!--TODO Stretch="{TemplateBinding Stretch}"-->
                                <Image.Source>
                                    <BitmapImage x:Name="BitmapImage" DecodePixelHeight="{Binding DecodePixelHeight, RelativeSource={RelativeSource TemplatedParent}}" DecodePixelWidth="{Binding DecodePixelWidth, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Image.Source>
                            </Image>
                            <!--<ProgressRing x:Name="progressRing" IsActive="True" Visibility="Visible"/>-->
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

