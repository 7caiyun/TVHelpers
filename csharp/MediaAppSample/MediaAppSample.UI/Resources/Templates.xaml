    <DataTemplate x:Key="RatingDataTemplate">
        <!-- currently XAML does not have a RatingControl, so this is a mockup-->
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="&#xE113;" Margin="0,0,0,0" Foreground="{StaticResource AccentColorBrush}" Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI Symbol" />
            <TextBlock Text="&#xE113;" Margin="15,0,0,0" Foreground="{StaticResource AccentColorBrush}" Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI Symbol" />
            <TextBlock Text="&#xE113;" Margin="15,0,0,0" Foreground="{StaticResource AccentColorBrush}" Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI Symbol" />
            <TextBlock Text="&#xE113;" Margin="15,0,0,0" Foreground="{StaticResource AccentColorBrush}" Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI Symbol" />
            <TextBlock Text="&#xE113;" Margin="15,0,0,0" Foreground="#FF3B3B3B" Style="{StaticResource BodyTextBlockStyle}" FontFamily="Segoe UI Symbol" />
        </StackPanel>
    </DataTemplate>
    
