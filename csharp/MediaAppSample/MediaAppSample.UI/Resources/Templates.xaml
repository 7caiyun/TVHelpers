    xmlns:converters="using:MediaAppSample.UI.Converters">

    <!-- ItemsPanels -->

    <ItemsPanelTemplate x:Key="HorizontalItemsPanelTemplate">
        <ItemsStackPanel Orientation="Horizontal" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="VerticalItemsPanelTemplate">
        <ItemsStackPanel Orientation="Vertical" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="HorizontalItemsWrapGridTemplate">
        <ItemsWrapGrid Orientation="Horizontal"/>
    </ItemsPanelTemplate>

    <!-- DataTemplates -->

    <DataTemplate x:Key="WebBrowserDataTemplate">
        <controls:WebViewPanel />
    </DataTemplate>

    <DataTemplate x:Key="TitleContentControl" x:DataType="models:MovieModel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{x:Bind Flag, Mode=OneWay}" Style="{StaticResource CaptionAltTextBlockStyle}"/>
            <Button x:Name="button" Content="{x:Bind Title, Mode=OneWay}" Margin="0,-8,0,0" Command="{Binding Command}"
                    CommandParameter="{x:Bind Mode=OneWay}" Style="{StaticResource UnderlineButton}"  Grid.Row="1"/>
            <TextBlock x:Name="byline" Margin="0,15,0,0" Text="{x:Bind ByLine, Mode=OneWay}"
                    Style="{StaticResource BodyTextBlockStyle}" TextWrapping="WrapWholeWords" Grid.Row="2"/>
            <ContentControl ContentTemplate="{StaticResource RatingDataTemplate}"
                    Margin="0,12,0,0" IsTabStop="False" Grid.Row="3"
                    Visibility="{x:Bind Title, Mode=OneWay, Converter={StaticResource visConverter}}"/>
        </Grid>
    </DataTemplate>

