<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="CommandSet_en-us">
    <AppName> MediaAppSample </AppName>
    <Example> Show me details of Runtime Three </Example>

    <Command Name="showByName">
      <Example> Show me details of Runtime Three </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> show [me] details of {ItemName} </ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> show [me] {builtin:AppName} details of {ItemName} </ListenFor>
      <Feedback> Showing details of {ItemName} </Feedback>
      <Navigate />
    </Command>

    <PhraseList Label="ItemName">
      <Item>One</Item>
      <Item>Two</Item>
      <Item>Three</Item>
    </PhraseList>
  </CommandSet>

</VoiceCommands>