                        <Button x:Name="NextButtonHorizontal" Template="{StaticResource HorizontalNextTemplate}" Width="50" Height="50" IsTabStop="False" UseSystemFocusVisuals="False" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="40" />
