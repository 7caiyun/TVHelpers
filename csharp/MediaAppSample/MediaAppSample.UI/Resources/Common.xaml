    <Thickness x:Key="HubHeaderMargin">0</Thickness>
    <Thickness x:Key="HubSectionHeaderMargin">0,28,0,0</Thickness>
    <Thickness x:Key="GalleryHeaderMargin">0,0,0,0</Thickness>
    <Thickness x:Key="SeeAllMargin">0,28,4,0</Thickness>
    <Thickness x:Key="MenuMargin">0,48,0,0</Thickness>
    <Thickness x:Key="MenuContentIndent">48,0,0,0</Thickness>

